@model DienMayQuyetTien.Areas.Admin.Models.Contact
@{
    ViewBag.Title = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="col-md-6 ">
    <div class="section-article contactpage" style="padding-left: 20px;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h1 style="color: black">Liên hệ với chúng tôi</h1>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-comment">
                <div class="form-group">
                    <label for="name"><em> Họ tên</em><span class="required">*</span></label>
                    @Html.EditorFor(model => model.Fullname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="email"><em> Email</em><span class="required">*</span></label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="phone"><em> Số điện thoại</em><span class="required">*</span></label>
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label for="message"><em> Tiêu đề</em><span class="required">*</span></label>
                    @Html.TextAreaFor(model => model.Title, new { @class = "form-control", row = "2" })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <label for="message"><em> Lời nhắn</em><span class="required">*</span></label>
                    @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", row = "6" })
                    @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Gửi nhận xét" class="btn-update-order" />
            </div>
        }
    </div>
</div>
<div class="col-md-3">
    <div class="f-contact" style="padding-left: 32px;">
        <h1 style="color: black">Thông tin liên hệ</h1>
        <ul class="list-unstyled">
            <li class="clearfix">
                <i class="fa fa-map-marker fa-1x" style="color:#b4031d "></i>
                <span style="color: black">45 Nguyễn Khắc Nhu, phường Cô Giang, Quận 1, TP Hồ Chí Minh</span><br>
            </li>
            <li class="clearfix">
                <i class="fa fa-phone fa-1x" style="color:#b4031d"></i>
                <span style="color: black">0773322489</span>
            </li>
            <li class="clearfix">
                <i class="fa fa-envelope fa-1x " style="color:#b4031d"></i>
                <span style="color: black"><a href="mailto:hai2571998@gmail.com">hai2571998@gmail.com</a></span>
            </li>
        </ul>
    </div>

</div>

