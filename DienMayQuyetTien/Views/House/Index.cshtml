                            Huawei
                        </a>
                    </li>
                    <li>
                        <a href="san-pham/asus-dt" title="Asus ( ĐT )" class="ws-nw overflow ellipsis">
                            Asus ( ĐT )
                        </a>
                    </li>
                    <li>
                        <a href="san-pham/lg" title="LG" class="ws-nw overflow ellipsis">
                            LG
                        </a>
                    </li>
                    <li>
                        <a href="san-pham/sony" title="Sony" class="ws-nw overflow ellipsis">
                            Sony
                        </a>
                    </li>
                    <li>
                        <a href="san-pham/khac" title="Khác" class="ws-nw overflow ellipsis">
                            Khác
                        </a>
                    </li>
                </ul>
            </div>
            <div class="list-product-content">
                @foreach (var item in Model.Where(c => c.ProductTypeID == 1))
                {
                    <div class="col-xs-6 col-sm-4 col-md-2 col-lg-2 product-one">
                        <div class="image-product">
                            <a href="" title="@item.ProductName">
                                <img src="@item.Avatar" class="img-bg">
                            </a>
                            <h4>
                                <a href="" title="@item.ProductName" class="ws-nw overflow ellipsis">
                                    @item.ProductName
                                </a>
                            </h4>
                        </div>
                        <div class="price-product-item">
                            <span class="">@String.Format("{0:0,0}", item.SalePrice)₫</span>
                            <span style="color: #000000">@String.Format("{0:0,0}", item.InstallmentPrice)₫</span>
                        </div>
                        <div class="btn-action">
                            <button type="button" class="fa fa-shopping-cart"></button>
                            <button type="button" class="fa fa-eye"></button>
                        </div>
                    </div>
                }
            </div>
            <div class="footer-load-more">
