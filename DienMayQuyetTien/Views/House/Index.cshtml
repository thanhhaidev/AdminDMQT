@model IEnumerable<DienMayQuyetTien.Areas.Admin.Models.Product>
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="banner">
    <div class="container">
        <div class="banner">
            <div class="item-banner">
                <a href="">
                    <img src="~/Assets/Client/images/b01.jpg">
                </a>
            </div>
            <div class="item-banner">
                <a href="">
                    <img src="~/Assets/Client/images/b02.jpg">
                </a>
            </div>
            <div class="item-banner">
