@model DienMayQuyetTien.Areas.Admin.Models.Account
@{
    Layout = null;
}
<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Login | Trang Quản lý Cửa hàng Điện máy Quyết Tiến</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon
        ============================================ -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Assets/Admin/img/favicon.ico">
    <!-- Google Fonts
        ============================================ -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i,800" rel="stylesheet">
    <!-- Bootstrap CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Assets/Admin/css/bootstrap.min.css">
    <!-- Bootstrap CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Assets/Admin/css/font-awesome.min.css">
    <!-- adminpro icon CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Assets/Admin/css/adminpro-custon-icon.css">
    <!-- meanmenu icon CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Assets/Admin/css/meanmenu.min.css">
    <!-- mCustomScrollbar CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Assets/Admin/css/jquery.mCustomScrollbar.min.css">
    <!-- animate CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Assets/Admin/css/animate.css">
    <!-- normalize CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Assets/Admin/css/normalize.css">
    <!-- form CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Assets/Admin/css/form.css">
    <!-- style CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Assets/Admin/css/style.css">
    <!-- responsive CSS
        ============================================ -->
    <link rel="stylesheet" href="~/Assets/Admin/css/responsive.css">
    <!-- modernizr JS
        ============================================ -->
    <script src="~/Assets/Admin/js/vendor/modernizr-2.8.3.min.js"></script>
</head>

<body class="materialdesign">
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- Header top area start-->
    <div class="wrapper-pro">
        <div class="content">
            <!-- login Start-->
            <div class="login-form-area mg-t-40 mg-b-40">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-4"></div>
                            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "adminpro-form", id = "adminpro-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="col-lg-4">
                                    <div class="login-bg">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="logo">
                                                    <a href="#">
                                                        <img src="~/Assets/Admin/img/logo/logo.png" alt="" />
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <div class="login-input-head">
                                                    <p>Username</p>
                                                </div>
                                            </div>
                                            <div class="col-lg-8">
                                                <div class="login-input-area">
                                                    @Html.TextBoxFor(a => a.Username)
                                                    <i class="fa fa-user login-user" aria-hidden="true"></i>
                                                    <em class="invalid">@Html.ValidationMessageFor(model => model.Username)</em>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <div class="login-input-head">
                                                    <p>Password</p>
                                                </div>
                                            </div>
                                            <div class="col-lg-8">
                                                <div class="login-input-area">
                                                    @Html.PasswordFor(a => a.Password)
                                                    <i class="fa fa-lock login-user"></i>
                                                    <em class="invalid">@Html.ValidationMessageFor(model => model.Password)</em>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            @if (@ViewBag.Incorrect != null)
                                            {  <em class="invalid">@ViewBag.Incorrect</em>}
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-4">

                                            </div>
                                            <div class="col-lg-8">
                                                <div class="login-button-pro">
                                                    <button type="submit" class="login-button login-button-lg">Log in</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        <div class="col-lg-4"></div>
                    </div>
                </div>
            </div>
            <!-- login End-->
        </div>
    </div>
    <!-- jquery
        ============================================ -->
    <script src="~/Assets/Admin/js/vendor/jquery-1.11.3.min.js"></script>
    <!-- bootstrap JS
        ============================================ -->
    <script src="~/Assets/Admin/js/bootstrap.min.js"></script>
    <!-- meanmenu JS
        ============================================ -->
    <script src="~/Assets/Admin/js/jquery.meanmenu.js"></script>
    <!-- mCustomScrollbar JS
        ============================================ -->
    <script src="~/Assets/Admin/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <!-- sticky JS
        ============================================ -->
    <script src="~/Assets/Admin/js/jquery.sticky.js"></script>
    <!-- scrollUp JS
        ============================================ -->
    <script src="~/Assets/Admin/js/jquery.scrollUp.min.js"></script>
    <!-- form validate JS
        ============================================ -->
    <script src="~/Assets/Admin/js/jquery.form.min.js"></script>
    <script src="~/Assets/Admin/js/jquery.validate.min.js"></script>
    <script src="~/Assets/Admin/js/form-active.js"></script>
    <!-- main JS
        ============================================ -->
    <script src="~/Assets/Admin/js/main.js"></script>
</body>

</html>
