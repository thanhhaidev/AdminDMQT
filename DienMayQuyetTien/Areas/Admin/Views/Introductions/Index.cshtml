@model DienMayQuyetTien.Areas.Admin.Models.Introduction

@{
    ViewBag.Title = "Introduction Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mg-t-30">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
            <div class="tinymce-single shadow-reset nt-mg-b-30">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="alert-title">
                    <h2>Introduction</h2>
                </div>
                @Html.TextAreaFor(model => model.Content, new {id = "summernote1" })
                <input type="submit" value="Save" class="btn btn-success" />
            }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#summernote1').summernote();
        });
    </script>
}